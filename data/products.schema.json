{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HBV Products",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "minLength": 1
      },
      "price": {
        "type": "string",
        "pattern": "^\\$?\\d+(?:\\.\\d{2})?$"
      },
      "image": {
        "type": "string",
        "minLength": 1
      },
      "slug": {
        "type": "string"
      },
      "link": {
        "type": "string"
      },
      "payment_link": {
        "type": "string"
      },
      "checkout": {
        "type": "string",
        "enum": [
          "external",
          "shopify",
          "stripe"
        ]
      }
    },
    "required": [
      "title",
      "price",
      "image"
    ],
    "additionalProperties": false
  }
}